<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- nome do construtor da app -->
        <TextView
            android:id="@+id/nome_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_pessoa"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="italic|bold" />

        <!-- diminutivo do utilizador -->
        <TextView
            android:id="@+id/diminutivo_utilizadorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:visibility="gone"
            android:textStyle="normal"
            />

        <EditText
            android:id="@+id/diminutivo_utilizadorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/legenda_edit_box"
            android:inputType="text"
        />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text"
            android:layout_gravity="center"
            />

        <!-- currÃ­culo do dono da app -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/curriculo"
                android:textAlignment="textStart"
                android:textSize="14sp" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>